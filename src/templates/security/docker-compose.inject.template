# Docker Compose secrets injection
# This file is merged with docker-compose.yml at runtime
# Secrets are injected from .env.secrets (generated by: devforge secrets inject)

version: '3.8'

services:
{% if BACKEND_STACK %}
  backend:
    env_file:
      - .env.secrets
{% endif %}

{% if DATABASE_STACK %}
  database:
    env_file:
      - .env.secrets
{% endif %}

# Note: .env.secrets is generated from encrypted .secrets.devforge
# Never commit .env.secrets to version control

